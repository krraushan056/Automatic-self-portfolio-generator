<body>
  <div class="qfc-container">
    <h2>Portfolio Form For Owner Detail </h2>
<label style="text-align:center; color:#85144b;" >LET'S CREATE BY OWN</label>
    <form action="/form1" method="POST"  enctype="multipart/form-data">
		<h3 style="text-align:center; color:#85144b;" >
			OWNER DETAILS
		</h3>
      <div>
        <div>
            <input placeholder="First Name" type="text" name="firstname"required>
        </div>
		  <div>
            <input placeholder="Last Name" type="text" name="lastname" required>
        </div>
		   <div>
            <input placeholder="address" type="text" name="address"required>
        </div>
        <div>
			                    <label for="image">Background Hd Image</label>
 
            <input placeholder="image" id="image"type="file" name="image" accept="image/*" required>
        </div>
		   
        <div>
            <input placeholder="Tagline" type="text" name="tagline"required>
        </div>
		   <div>
            <input placeholder="Description in Heading" type="text" name="headingdescription"required>
        </div>
		   <div>
            <input placeholder="Description" type="text"  name="description"required>
        </div>
		<div>
			
          <button type="submit">Submit</button>
		  </div>
		</div>
		  
        
	  </form></div></body>
